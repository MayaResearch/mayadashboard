---
export const prerender = false;

import DashboardLayout from "../layouts/DashboardLayout.astro";
import { StatsCards } from "../components/overview/StatsCards";
import { PaidFreeUsers } from "../components/overview/PaidFreeUsers";
import { ChartsSection } from "../components/overview/ChartsSection";
import { NamedDevices } from "../components/overview/NamedDevices";
---

<DashboardLayout title="Overview" activePage="overview">
  <div class="space-y-6">
    <!-- Stats Grid -->
    <StatsCards client:load />

    <!-- Paid Users Need to Move to Premium -->
    <PaidFreeUsers client:load />

    <!-- Charts Grid -->
    <ChartsSection client:load />

    <!-- Named Devices -->
    <NamedDevices client:load />
  </div>
</DashboardLayout>

<!-- Chart.js CDN - needed for ChartsSection -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
